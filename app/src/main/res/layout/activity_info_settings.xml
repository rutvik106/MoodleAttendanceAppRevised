<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/primaryColor"
    tools:context="com.rutvik.moodleattendanceapp.InfoSettingsActivity" >

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Moodle Host (Double tap here to edit)"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/etMoodleHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:hint="eg:192.168.1.1/moodle"
        android:textColorHint="@color/primaryColorLight2"
       	android:textColor="#ffff"
        android:backgroundTint="@color/accentColor"
       	android:inputType="textFilter"
        android:ems="10" >


    </EditText>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/about"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

</LinearLayout>
