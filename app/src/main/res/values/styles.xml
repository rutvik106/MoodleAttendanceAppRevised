<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>



    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>

        <item name="android:textColorHint">@color/primaryColorLight2</item>

        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColorDark</item>
        
        <item name="colorButtonNormal">@color/primaryColor</item>




    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primaryColorDark2</item>
        <item name="colorControlActivated">@color/primaryColorDark2</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/primaryColorDark2</item>
        <item name="colorControlActivated">@color/primaryColorDark2</item>
    </style>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>

    </style>


    <style name="MyFloatingLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/primaryColor</item>
         <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColorDark</item>
    </style>


</resources>
